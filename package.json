{
  "name": "grabenv",
  "description": "GrabEnv is a lightweight, developer-friendly utility for validating, parsing, and managing environment variables in TypeScript apps. Combining dotenv for seamless loading and Zod for schema-based validation, it offers type-safe, reliable configuration management, reducing errors from missing or mistyped variables.",
  "version": "0.0.1",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "environment",
    "variables",
    "typescript",
    "dotenv",
    "zod",
    "validation",
    "configuration",
    "type-safe"
  ],
  "author": "Raj Mazumder <rajmazumder27.08.2001@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RajMazumder18110/GrabEnv.git"
  },
  "bugs": {
    "url": "https://github.com/RajMazumder18110/GrabEnv/issues"
  },
  "homepage": "https://github.com/RajMazumder18110/GrabEnv#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^22.9.0",
    "husky": "^9.1.6",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=18"
  }
}